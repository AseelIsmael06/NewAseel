<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnLogInMain"
            android:layout_width="156dp"
            android:layout_height="72dp"
            android:backgroundTint="@color/buttons"
            android:onClick="goToLogIn"
            android:text="Log In"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="541dp" />

        <Button
            android:id="@+id/btnSignUpMain"
            android:layout_width="163dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/buttons"
            android:onClick="goToSignUp"
            android:text="Sign Up"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="465dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="464dp"
            android:layout_height="278dp"
            android:scrollbarSize="15sp"
            android:src="@drawable/aseel50"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="-2dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="330dp"
            android:layout_height="0dp"
            android:ellipsize="marquee"
            android:hint="𝓛𝓪𝓼𝓽 𝓕𝓲𝓷𝓲𝓼𝓱 "
            android:scrollbarSize="15sp"
            android:text="𝓛𝓪𝓼𝓽 𝓕𝓲𝓷𝓲𝓼𝓱 "
            android:textColor="#5CBF6565"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="209dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>