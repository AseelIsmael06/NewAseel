<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/AddProduct"
            android:layout_width="150dp"
            android:layout_height="73dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="15dp"
            android:text="AddProduct"
            app:layout_constraintBottom_toTopOf="@+id/AllProducts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnSignUpMain"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/btnLogInMain"
            android:layout_width="140dp"
            android:layout_height="76dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="156dp"
            android:backgroundTint="@color/buttons"
            android:onClick="goToLogIn"
            android:text="Log In"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnSignUpMain"
            app:layout_constraintEnd_toStartOf="@+id/AllProducts"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUpMain"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="192dp"
            android:scrollbarSize="15sp"
            android:src="@drawable/aseel50"
            app:layout_constraintBottom_toTopOf="@+id/AddProduct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="273dp"
            android:layout_height="74dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="212dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="117dp"
            android:ellipsize="marquee"
            android:hint="𝓛𝓪𝓼𝓽 𝓕𝓲𝓷𝓲𝓼𝓱 "
            android:scrollbarSize="15sp"
            android:text="𝓛𝓪𝓼𝓽 𝓕𝓲𝓷𝓲𝓼𝓱 "
            android:textColor="#5CBF6565"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@+id/btnSignUpMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSignUpMain"
            android:layout_width="143dp"
            android:layout_height="63dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="255dp"
            android:backgroundTint="@color/buttons"
            android:onClick="goToSignUp"
            android:text="Sign Up"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/AddProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/AllProducts"
            android:layout_width="154dp"
            android:layout_height="81dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="191dp"
            android:text="AllProducts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnLogInMain"
            app:layout_constraintTop_toBottomOf="@+id/AddProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>